<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.OracleDialect</property>
		<property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
		<property name="hibernate.connection.username">hib_orcl</property>
		<property name="hibernate.connection.password">gauraw</property>
		<property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:ORCLSERVER</property>
		<!-- <property name="hibernate.cache.use_query_cache">true</property> -->

		<property name="hibernate.hbm2ddl.auto">create-drop</property>
		<property name="hibernate.show_sql">true</property>

		<!-- we can have multiple mapping resource -->
		<mapping resource="Person.hbm.xml" />

	</session-factory>
</hibernate-configuration>
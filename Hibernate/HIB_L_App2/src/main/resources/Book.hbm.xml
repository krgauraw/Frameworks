<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="demo.hib.book">

	<class name="Book" table="BOOK">
		<id name="bookId" column="Id"></id>
		<property name="bookTitle" column="Title"></property>
		<property name="authorName" column="Author"></property>
		<property name="publishYear" column="p_year"></property>
	</class>

</hibernate-mapping>

